<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_userSearchResult_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.fragment.UserSearchResultFragment">

    <ImageView
        android:id="@+id/image_userSearchResult_avatar"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_userSearchResult_avatar"
        app:layout_constraintStart_toEndOf="@+id/image_userSearchResult_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_userSearchResult_displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="Display name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_userSearchResult_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\@username"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>